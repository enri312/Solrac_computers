<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.solrac.computers.controller.DashboardController"
      spacing="30" style="-fx-background-color: transparent;">
    
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
    
    <!-- Title -->
    <Label fx:id="titleLabel" text="Panel de Control" styleClass="label-title">
        <font><Font name="System Bold" size="32"/></font>
    </Label>
    
    <!-- Statistics Cards -->
    <GridPane hgap="20" vgap="20">
        <columnConstraints>
            <ColumnConstraints percentWidth="33.33" hgrow="ALWAYS"/>
            <ColumnConstraints percentWidth="33.33" hgrow="ALWAYS"/>
            <ColumnConstraints percentWidth="33.33" hgrow="ALWAYS"/>
        </columnConstraints>
        
        <!-- To Fix Card -->
        <VBox GridPane.columnIndex="0" styleClass="stat-card,stat-card-yellow" spacing="12">
            <Label fx:id="toFixLabel" text="Equipos para Arreglar" styleClass="label-secondary">
                <font><Font size="13"/></font>
            </Label>
            <Label fx:id="toFixCountLabel" text="0" style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;"/>
        </VBox>
        
        <!-- To Deliver Card -->
        <VBox GridPane.columnIndex="1" styleClass="stat-card,stat-card-green" spacing="12">
            <Label fx:id="toDeliverLabel" text="Para Entregar" styleClass="label-secondary">
                <font><Font size="13"/></font>
            </Label>
            <Label fx:id="toDeliverCountLabel" text="0" style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;"/>
        </VBox>
        
        <!-- Delivered Card -->
        <VBox GridPane.columnIndex="2" styleClass="stat-card,stat-card-blue" spacing="12">
            <Label fx:id="deliveredLabel" text="Entregados" styleClass="label-secondary">
                <font><Font size="13"/></font>
            </Label>
            <Label fx:id="deliveredCountLabel" text="0" style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;"/>
        </VBox>
    </GridPane>
    
    <!-- Ticket Lists -->
    <GridPane hgap="30" vgap="20" VBox.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints percentWidth="50" hgrow="ALWAYS"/>
            <ColumnConstraints percentWidth="50" hgrow="ALWAYS"/>
        </columnConstraints>
        
        <!-- Pending List -->
        <VBox GridPane.columnIndex="0" spacing="15">
            <Label fx:id="pendingListLabel" text="Equipos en Taller (Pendientes)"
                   style="-fx-text-fill: #fbbf24; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
                <VBox fx:id="pendingListContainer" spacing="10" styleClass="glass-card" minHeight="300">
                    <!-- Tickets will be added here dynamically -->
                </VBox>
            </ScrollPane>
        </VBox>
        
        <!-- Ready List -->
        <VBox GridPane.columnIndex="1" spacing="15">
            <Label fx:id="readyListLabel" text="Listos para Entregar"
                   style="-fx-text-fill: #00ff88; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
                <VBox fx:id="readyListContainer" spacing="10" styleClass="glass-card" minHeight="300">
                    <!-- Tickets will be added here dynamically -->
                </VBox>
            </ScrollPane>
        </VBox>
    </GridPane>
</VBox>
