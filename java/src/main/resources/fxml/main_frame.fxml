<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.solrac.computers.controller.MainFrameController"
            style="-fx-background-color: #0b0c15;">
    
    <!-- Sidebar -->
    <left>
        <VBox prefWidth="250" styleClass="sidebar" spacing="10">
            <padding>
                <Insets top="24" right="16" bottom="24" left="16"/>
            </padding>
            
            <!-- Logo -->
            <HBox alignment="CENTER_LEFT" spacing="12">
                <Region prefHeight="40" prefWidth="40"
                        style="-fx-background-color: linear-gradient(to bottom right, #00d4ff, #b24bf3);
                               -fx-background-radius: 10;
                               -fx-effect: dropshadow(gaussian, rgba(0,212,255,0.3), 10, 0, 0, 0);"/>
                <Label text="Solrac's" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            </HBox>
            
            <Separator style="-fx-background-color: rgba(255,255,255,0.1);">
                <VBox.margin>
                    <Insets top="20" bottom="20"/>
                </VBox.margin>
            </Separator>
            
            <!-- Navigation Buttons -->
            <VBox spacing="8" VBox.vgrow="ALWAYS">
                <Button fx:id="dashboardButton" text="Panel de Control" onAction="#showDashboard"
                        styleClass="nav-button" maxWidth="Infinity" alignment="CENTER_LEFT">
                    <font><Font size="14"/></font>
                </Button>
                
                <Button fx:id="newTicketButton" text="Nuevo Ingreso" onAction="#showNewTicket"
                        styleClass="nav-button" maxWidth="Infinity" alignment="CENTER_LEFT">
                    <font><Font size="14"/></font>
                </Button>
                
                <Button fx:id="listTicketsButton" text="Lista de Equipos" onAction="#showTicketsList"
                        styleClass="nav-button" maxWidth="Infinity" alignment="CENTER_LEFT">
                    <font><Font size="14"/></font>
                </Button>
            </VBox>
            
            <!-- User Info and Logout -->
            <VBox spacing="12">
                <Separator style="-fx-background-color: rgba(255,255,255,0.1);"/>
                
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <Label text="ðŸ‘¤" style="-fx-text-fill: #9ca3af; -fx-font-size: 16px;"/>
                    <Label fx:id="userLabel" text="Admin" style="-fx-text-fill: #9ca3af; -fx-font-size: 13px;"/>
                </HBox>
                
                <Button fx:id="logoutButton" text="Salir" onAction="#handleLogout"
                        styleClass="button-ghost" maxWidth="Infinity"
                        style="-fx-text-fill: #ef4444;">
                    <font><Font size="13"/></font>
                </Button>
            </VBox>
        </VBox>
    </left>
    
    <!-- Content Area -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: transparent;">
            <!-- Views will be loaded here dynamically -->
        </StackPane>
    </center>
</BorderPane>
